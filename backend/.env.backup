# Commcomm Application - Environment Variables
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://commerzbank_user:secure_password_123@localhost:5432/commerzbank_db?schema=public"

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3001

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Session Secret (CHANGE THIS IN PRODUCTION!)
# Generate a strong random string: openssl rand -base64 32
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (10MB = 10485760 bytes)
MAX_FILE_SIZE=10485760

# Upload directory path
UPLOAD_PATH="./uploads"

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# ===========================================
# ADMIN PANEL CONFIGURATION
# ===========================================
# Admin username (CHANGE THIS IN PRODUCTION!)
ADMIN_USERNAME="admin"

# Admin password (CHANGE THIS IN PRODUCTION!)
ADMIN_PASSWORD="admin123"

# ===========================================
# VISITOR TRACKING CONFIGURATION
# ===========================================
# Enable visitor tracking
ENABLE_VISITOR_TRACKING=true

# Track IP addresses
TRACK_IP_ADDRESSES=true

# Track user agents
TRACK_USER_AGENTS=true

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Uncomment and configure for production deployment

# SSL/TLS Configuration
# SSL_CERT_PATH="/etc/letsencrypt/live/your-domain.com/fullchain.pem"
# SSL_KEY_PATH="/etc/letsencrypt/live/your-domain.com/privkey.pem"

# Domain Configuration
# DOMAIN="your-domain.com"
# FRONTEND_URL="https://your-domain.com"
# API_URL="https://your-domain.com/api"

# Database Pool Configuration
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_POOL_IDLE_TIMEOUT=30000

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Enable automatic backups
ENABLE_AUTO_BACKUP=false

# Backup interval in hours
BACKUP_INTERVAL=24

# Backup retention days
BACKUP_RETENTION_DAYS=7

# Backup directory
BACKUP_DIR="./backups"

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# Enable metrics collection
ENABLE_METRICS=false

# ===========================================
# SECURITY HEADERS
# ===========================================
# Enable security headers
ENABLE_SECURITY_HEADERS=true

# Content Security Policy
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;"

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug mode
DEBUG=false

# Enable detailed error messages
DETAILED_ERRORS=false

# Enable API documentation
ENABLE_API_DOCS=false

# ===========================================
# NOTES
# ===========================================
# 1. Never commit the actual .env file to version control
# 2. Change all default passwords and secrets in production
# 3. Use strong, unique passwords for database and admin access
# 4. Regularly rotate JWT and session secrets
# 5. Monitor logs for suspicious activity
# 6. Keep dependencies updated for security patches
